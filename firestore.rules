rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isResumeOwner(resumeId) {
      return isSignedIn()
        && get(/databases/$(database)/documents/resumes/$(resumeId)).data.userId
          == request.auth.uid;
    }

    function isPublicResume(resumeId) {
      return get(/databases/$(database)/documents/resumes/$(resumeId))
        .data.visibility.isPublic == true;
    }

    match /users/{userId} {
      allow read, create, update, delete: if isSignedIn()
        && request.auth.uid == userId;
    }

    match /resumes/{resumeId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;
      allow read: if (isSignedIn()
          && resource.data.userId == request.auth.uid)
        || resource.data.visibility.isPublic == true;
      allow update, delete: if isSignedIn()
        && resource.data.userId == request.auth.uid;
    }

    match /templates/{templateId} {
      allow read: if (resource.data.isPublic == true
          && resource.data.status == "active")
        || (isSignedIn() && resource.data.ownerId == request.auth.uid);
      allow create: if isSignedIn()
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn()
        && (resource.data.ownerId == request.auth.uid
          || request.resource.data.ownerId == request.auth.uid);
    }

    match /published/{resumeId} {
      allow read: if resource.data.isPublic == true
        || isResumeOwner(resumeId);
      allow create, update, delete: if isResumeOwner(resumeId);
    }

    match /resumeComments/{commentId} {
      allow create: if request.resource.data.resumeId != null
        && isPublicResume(request.resource.data.resumeId)
        && (
          request.resource.data.publicSlug == null
          || request.resource.data.publicSlug
            == get(/databases/$(database)/documents/resumes/$(request.resource.data.resumeId))
              .data.publicSlug
          || request.resource.data.publicSlug == request.resource.data.resumeId
        );
      allow read: if isResumeOwner(resource.data.resumeId);
      allow delete: if isResumeOwner(resource.data.resumeId);
    }
  }
}
