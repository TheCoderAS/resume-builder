rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isResumeOwner(resumeId) {
      return isSignedIn()
        && get(/databases/$(database)/documents/resumes/$(resumeId)).data.userId
          == request.auth.uid;
    }

    match /users/{userId} {
      allow read, create, update, delete: if isSignedIn()
        && request.auth.uid == userId;
    }

    match /resumes/{resumeId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn()
        && resource.data.userId == request.auth.uid;
    }

    match /templates/{templateId} {
      allow read: if (resource.data.type == "admin"
          && resource.data.status == "active")
        || (isSignedIn() && resource.data.ownerId == request.auth.uid);
      allow create: if isSignedIn()
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn()
        && resource.data.ownerId == request.auth.uid;
    }

    match /published/{resumeId} {
      allow read: if resource.data.isPublic == true
        || isResumeOwner(resumeId);
      allow create, update, delete: if isResumeOwner(resumeId);
    }
  }
}
